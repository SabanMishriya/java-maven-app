pipeline {
    agent any

    stages {
          stage('Build') {
            steps {
            sh  "mvn -B -DskipTests clean intall"
                
            }
        }
     stage('Test') {
			steps {
				sh 'mvn test'
			}
			post {
				always {
					junit 'target/surefire-reports/*.xml'
								
				}
			}
		}
		stage('deliver') {
		    steps {
		        sh "./scripts/deliver.sh"
		    }
		}
    }
}
